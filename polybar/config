[colors]


;transparent
tpt = #00000000

;black
black = #000000

;brown
tbr = #874816

;Transparent Light blue
tblue = #54616ddd

color1 = #0077ff

;light lavender
llv = #a5b2ff

;light indigo
lin = #333649

;White
white = #ffffff

;Red
red = #9b2222

;Bright Red
br = #ff0000

;Yellow
yellow = #eeff38

;Light Yellow
lyellow = #fffb30

;Green
green = #2dff29 

;turquoise
tqi = #30ff9e

;orang
orange =  #fff430

;Nimbu
nim = #d0ff00

[bar/example]
monitor = eDP1

width = 100%
height = 18
bottom = true
fixed-center = true

background = ${colors.black}
foreground = ${colors.white}

line-size = 2

border-size = 0
border-color = #c342b00

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = "Roboto Condensed:pixelsize=10;1"
font-1 = "Hack:pixelsize=9;1"

modules-left =   alsa xbacklight
modules-center = i3 xwindow
modules-right = wlan eth battery date

tray-position = right
tray-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%



[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
;label-mode-foreground = #000
;label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.tblue}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.br}
label-urgent-padding = 2

; Separator in between workspaces
label-separator = |


[module/cpu]
type = internal/cpu
interval = 2
format-underline = #f90000
label = CPU %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-underline = #4bffdc
label = RAM %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp10s0f0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.color1}
label-connected = ⟪ %essid% ⟫

[module/eth]
type = internal/network
interface = enp8s0
interval = 3.0

format-connected-underline = #55aa55
label-connected = %local_ip%

[module/date]
type = internal/date
interval = 5

date = "%d/%m"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

label = %time% | %date%
format-underline = ${colors.tqi}

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = []
bar-indicator-foreground = ${colors.white}
bar-indicator-font = 0
bar-fill = =
bar-fill-font = 0
bar-fill-foreground = ${colors.tqi}
bar-empty = =
bar-empty-font = 0
bar-empty-foreground = ${colors.red}

[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${colors.white}

;format-muted-prefix = " "
format-muted-foreground = ${colors.red}
label-muted = MUTE

bar-volume-width = 10
bar-volume-indicator = ||
bar-volume-indicator-font = 0
bar-volume-fill = =
bar-volume-fill-font = 0
bar-volume-empty = =
bar-volume-empty-font = 0
bar-volume-empty-foreground = ${colors.red}
bar-volume-fill-foreground = ${colors.tqi}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98
low-at  = 10


format-charging = <label-charging>
label-charging = CHG %percentage%%
format-charging-underline = ${colors.yellow}

format-full = <label-full>
label-full = CHGD
format-full-underline = ${colors.green}

format-discharging = <label-discharging>
label-discharging = BAT %percentage%%
format-discharging-underline = ${colors.orange}
format-low-underline =  ${colors.red}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

